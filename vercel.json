{
  "env": { "DISABLE_AUTH": "true" },
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/mcp.ts": {
      "maxDuration": 60
    },
    "api/auth/login.ts": {
      "maxDuration": 30
    },
    "api/auth/callback.ts": {
      "maxDuration": 30
    },
    "api/auth/profile.ts": {
      "maxDuration": 15
    },
    "api/auth/logout.ts": {
      "maxDuration": 15
    },
    "api/auth/refresh.ts": {
      "maxDuration": 30
    },
    "api/auth/revoke.ts": {
      "maxDuration": 30
    },
    "api/index.ts": {
      "maxDuration": 10
    },
    "api/dashboard.ts": {
      "maxDuration": 15
    },
    "api/test-auth.ts": {
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/api/index"
    },
    {
      "source": "/mcp",
      "destination": "/api/mcp"
    },
    {
      "source": "/dashboard",
      "destination": "/api/dashboard"
    }
  ]
}
